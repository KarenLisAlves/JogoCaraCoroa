<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="326dp"
        android:layout_height="44dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="408dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione a opção desejada:"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="293dp"
        android:layout_height="81dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.516">

        <RadioGroup
            android:id="@+id/grupoMoedas"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"

            android:layout_marginLeft="150dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="446dp">

            <RadioButton
                android:id="@+id/Cara"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="jogar"
                android:text="CARA"
                app:layout_constraintStart_toStartOf="parent" />

            <RadioButton
                android:id="@+id/Coroa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:onClick="jogar"
                android:text="COROA"
                app:layout_constraintStart_toStartOf="parent" />
        </RadioGroup>

        <Button
            android:id="@+id/botao_jogar"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:onClick="jogar"
            android:text="JOGAR"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="68dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/nomeJogador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="217dp"
        android:layout_height="59dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/texto_nome"
            android:layout_width="255dp"
            android:layout_height="45dp"
            android:layout_weight="50"
            android:text="Nome do Jogador:"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="102dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textoEscolha"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_weight="1"
            android:text="CARA ou COROA"
            android:textSize="50dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>